[
    {
      "$match": {
        "year":{"$lt":1950},
        "imdb.rating":{"$gte":7.00}
      }
    },
    {
          "$lookup": {
              "from": "comments",
              "localField": "_id",
              "foreignField": "movie_id",
              "as": "group_of_comments"
          }
      },
    {
          "$project": {
              "_id": 0,
              "title": 1,
              "releaseYear": "$year",
              "genres": 1,
              "imdbRating": "$imdb.rating",
              "comments": {
                  "$map": {
                      "input": { "$slice": ["$group_of_comments", 2] },
                      "as": "comment",
                      "in": {
                          "name": "$$comment.name",
                          "text": "$$comment.text"
                      }
                  }
              }
          }
    }
    
  ]